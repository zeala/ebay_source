<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" 
		xmlns:scrollbars="com.ebayproject.style.skins.panels.scrollbars.*"
		>
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="down" />
		<s:State name="over" />
		<s:State name="up" />
	</s:states>
	

	<s:Group width="13">
		<scrollbars:VScrollBarThumb_up includeIn="up" horizontalCenter="0" height="100%"/>
		<scrollbars:VScrollBarThumb_over includeIn="over, down" horizontalCenter="0"  height="100%"/>
	</s:Group>
</s:Skin>
