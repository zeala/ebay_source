<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		minWidth="20" minHeight="20"
		>
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="down" />
		<s:State name="over" />
		<s:State name="up" />
	</s:states>
	
	<!-- SkinParts
	name=iconDisplay, type=spark.primitives.BitmapImage, required=false
	na me=labelDisplay, type=spark.core.IDisplayText, required=false
	-->
	<s:Rect 
		id="border"
		alpha.up="0"
		alpha="1"
		left="0" right="0" top="0" bottom="0" radiusX="2"
		>
		<s:fill>
			<s:SolidColor color="0xcccccc" alpha="0.5"/>
		</s:fill>
		<s:stroke>
			<s:LinearGradientStroke rotation="90" weight="1">
				<s:GradientEntry color="0x777777"
								 color.down="0x555555"
								 />
				<s:GradientEntry color="0x777777"
								 color.down="0x555555"
								 />
			</s:LinearGradientStroke>
		</s:stroke>
	</s:Rect>
	
	<s:HGroup width="100%" height="100%" verticalAlign="middle" 
			  gap="3"
			  paddingLeft="2" paddingRight="2" paddingTop="2" paddingBottom="2" >
		<s:BitmapImage 
			alpha.disabled="0.4" 
			source="{hostComponent.getStyle('icon')}"
			verticalCenter="0"
			
			/>
		<s:Label
			text="{hostComponent.label}"
			visible="{hostComponent.label != null}"
			includeInLayout="{ hostComponent.label != null}"
			fontSize="10"
			/>
	</s:HGroup>  
	
</s:Skin>
