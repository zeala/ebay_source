<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			[Embed(source="../assets/botones/Scroll_up.png",  
				scaleGridTop="6", scaleGridBottom="14", 
                scaleGridLeft="6", scaleGridRight="14")]
			[Bindable]
			public var button_up : Class;
			
			[Embed(source="../assets/botones/Scroll_up1.png",  
				scaleGridTop="6", scaleGridBottom="14", 
                scaleGridLeft="6", scaleGridRight="14")]
			[Bindable]
			public var button_over : Class;
			
			
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="down" />
		<s:State name="over" />
		<s:State name="up" />
	</s:states>
	
	<s:Image source="{button_up}" includeIn="up, disabled" width="{width}" />
	<s:Image source="{button_over}" includeIn="over, down" width="{width}"/>

</s:Skin>
